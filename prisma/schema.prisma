generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(GUEST)
}

enum Role {
  SUPER_ADMIN
  STAFF_ADMIN
  FINANCE_ADMIN
  MEMBER
  GUEST
}

model Rental {
  id          String     @id @default(uuid())
  name        String
  type        RentalType
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum RentalType {
  LAPANGAN
  GEDUNG
  KENDARAAN
}
